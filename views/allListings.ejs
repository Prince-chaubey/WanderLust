<% layout("layouts/boilerplate.ejs")%>

<body class="bg-gray-50 min-h-screen font-inter">

    <div class="container mx-auto px-4 py-8 max-w-7xl">
        <div class="text-center mb-10">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Explore WanderLust</h1>
            <p class="text-lg text-gray-600">Discover your perfect getaway</p>
        </div>
        
        <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8">
            <% for(const list of allListings) { %>
                <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100 transition duration-200 transform hover:-translate-y-1 hover:shadow-xl">
                    <div class="relative">
                        <img src="<%= list.image %>" alt="<%= list.title %>" class="w-full h-60 object-cover">
                        <span class="absolute bottom-3 left-3 bg-white/90 px-3 py-1 rounded-full text-sm font-medium text-gray-800">
                            <%= list.location %>, <%= list.country %>
                        </span>
                        <span class="absolute top-3 right-3 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-1">
                            $<%= list.price %>
                            <span class="text-xs font-normal text-gray-200">/ night</span>
                        </span>
                    </div>
                    <div class="p-5">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= list.title %></h2>
                        <p class="text-gray-600 line-clamp-2 mb-4"><%= list.description %></p>
                        <div class="flex gap-3 flex-wrap justify-between">
                            <form action="/listings/<%=list.id %>" method="get">
                                <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition">
                                    View Details
                                </button>
                            </form>
                            <form action="/listings/<%=list.id %>/edit" method="get">
                                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition">
                                    Edit
                                </button>
                            </form>
                            <form action="/listings/<%=list.id %>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure you want to delete this listing?');">
                                <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition">
                                   Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</body>

