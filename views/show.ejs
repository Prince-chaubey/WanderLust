<% layout("layouts/boilerplate.ejs")%>
<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-lg">
        <img src="<%= list.image %>" alt="<%= list.title %>" class="w-full h-64 object-cover rounded-lg">
        
        <div class="mt-4">
            <h1 class="text-3xl font-bold text-gray-800"><%= list.title %></h1>
            <p class="text-gray-500 text-sm"><%= list.location %>, <%= list.country %></p>
            <p class="text-gray-700 mt-3"><%= list.description %></p>
            <p class="text-green-600 font-bold text-2xl mt-4">$<%= list.price %></p>
        </div>

        <a href="/listings" class="mt-6 inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">Back to Listings</a>
    </div>

</body>

